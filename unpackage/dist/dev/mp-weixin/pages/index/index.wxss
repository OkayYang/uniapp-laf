
.wrap {
	padding: 24rpx;
}
page {

	width: 100%;
	background-color: #ffffff;
	min-height: 100%;
}

/* 回到顶部 */
.goTop {
	height: 100rpx;
	width: 100rpx;
	position: fixed;
	bottom: 50rpx;
	background: rgba(255, 255, 255, 1) !important;

	box-shadow: 0 0 0 rgba(0, 0, 0, 0.2), 0 0 0 rgba(255, 255, 255, 0.8),
		inset 4px 4px 10px rgba(0, 0, 0, 0.1),
		inset -3px -5px 10px rgba(255, 255, 255, 1);
	right: 30rpx;
	border-radius: 50%;
}

